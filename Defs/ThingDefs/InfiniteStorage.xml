<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="FurnitureBase">
		<defName>InfiniteStorage</defName>
		<label>infinite storage</label>
		<description>A place to store all types of things.</description>
		<thingClass>InfiniteStorage.Building_InfiniteStorage</thingClass>
		<graphicData>
			<texPath>Furniture/InfiniteStorage</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(1,1)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<altitudeLayer>ItemImportant</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<fillPercent>0.4</fillPercent>
		<castEdgeShadows>true</castEdgeShadows>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<costStuffCount>20</costStuffCount>
		<costList>
			<Component>4</Component>
			<Steel>80</Steel>
		</costList>
		<defaultPlacingRot>South</defaultPlacingRot>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Mass>10</Mass>
			<WorkToBuild>2000</WorkToBuild>
			<Flammability>1.0</Flammability>
		</statBases>
		<size>(1,1)</size>
		<designationHotKey>Misc12</designationHotKey>
		<staticSunShadowHeight>0.5</staticSunShadowHeight>
		<surfaceType>Item</surfaceType>
		<canOverlapZones>false</canOverlapZones>
		<inspectorTabs>
			<li>ITab_Storage</li>
		</inspectorTabs>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<startElectricalFires>true</startElectricalFires>
				<basePowerConsumption>0</basePowerConsumption>
				<shortCircuitInRain>false</shortCircuitInRain>
			</li>
			<li Class="CompProperties_Flickable"/>
		</comps>
		<building>
			<ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
			<fixedStorageSettings>
				<filter>
					<specialFiltersToDisallow>
						<li>AllowRotten</li>
					</specialFiltersToDisallow>
					<categories>
						<li>Manufactured</li>
						<li>ResourcesRaw</li>
						<li>Items</li>
						<li>Weapons</li>
						<li>Apparel</li>
						<li>Chunks</li>
					</categories>
					<thingDefs />
				</filter>
			</fixedStorageSettings>
			<defaultStorageSettings>
				<priority>Preferred</priority>
				<filter>
					<specialFiltersToDisallow>
						<li>AllowRotten</li>
					</specialFiltersToDisallow>
					<categories>
						<li>Manufactured</li>
						<li>ResourcesRaw</li>
						<li>Items</li>
						<li>Weapons</li>
						<li>Apparel</li>
						<li>Chunks</li>
					</categories>
				</filter>
			</defaultStorageSettings>
		</building>
		<researchPrerequisites>
			<li>InfiniteStorage</li>
			<li>MultiAnalyzer</li>
		</researchPrerequisites>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,1)</interactionCellOffset>
		<designationCategory>Misc</designationCategory>
		<modExtensions>
			<li Class="InfiniteStorage.InfiniteStorageType">
				<SaveSettingsType>Zone_Stockpile</SaveSettingsType>
				<IncludeInWorldLookup>true</IncludeInWorldLookup>
			</li>
			<li Class="InfiniteStorage.InfiniteStorgeGizmoViewTexture">
				<GizmoViewTexture>infinitestorageview</GizmoViewTexture>
			</li>
		</modExtensions>
		<tickerType>Rare</tickerType>
	</ThingDef>
</Defs>